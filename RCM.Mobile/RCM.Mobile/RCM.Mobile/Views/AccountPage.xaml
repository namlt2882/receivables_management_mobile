<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RCM.Mobile.Views.AccountPage"
             xmlns:prism="clr-namespace:Prism.Mvvm;assembly=Prism.Forms"
             prism:ViewModelLocator.AutowireViewModel="True"
             Title="{Binding Title}">
    <ContentPage.Content>
        <StackLayout>
            <StackLayout VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand">
                <Label 
                 FontSize="Large">
                    <Label.FormattedText>
                        <FormattedString>
                            <Span Text="Account: "/>
                            <Span Text="{Binding AccountName}"/>
                        </FormattedString>
                    </Label.FormattedText>
                </Label>
                <StackLayout Orientation="Vertical">
                    <Entry Placeholder="IP" Text="{Binding IP}"/>
                    <Button Text="Change IP" Command="{Binding ChangeIP}"/>
                </StackLayout>
                
            </StackLayout>
            <Button Text="Log out" Command="{Binding Logout}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>